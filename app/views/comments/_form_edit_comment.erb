<!-- form for new/edit comment -->


<%= form_for(@comment) do |f| %>
    <caption><h3>
    <%= "Автор отзыва" %><br>
      <%= @comment.commenter_title %></h3>
    Сотрудник <br>
      <font color="red"><%= @comment.title %>   <%= @comment.forname %>   <%= @comment.fornametwo %></font><br>
    </caption><br>

    <%= f.text_area(:body, size: "50x4") %> <br>
    <%= "Оценка" %> <%= f.select :plunus, (1..10) %> <br><br>

  <button class="button"><%= f.submit 'Сохранить' %></button>
<% end %>