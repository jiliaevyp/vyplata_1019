<!-- form edit level  -->
<%= form_for(@level) do |f| %>
    <% if @level.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@level.errors.count, "error") %> prohibited this admin_level from being saved:</h2>

          <ul>
            <% @level.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <table border="1">
      <caption><h2>
        Администратор <br>
        <%= @personal.title  %>
        <%= @admin.email  %></h2>
        <h2>Доступ к странице </h2>
      </caption>
      <thead>
      <tr>
        <th>№</th>
        <th>Наименование</th>
        <th>Содержание</th>
      </tr>
      </thead>
      <tbody>
      <% n=0 %>
      <tr> <td><%= n += 1 %></td> <td>Страница</td><td align="center"><%= f.select :access_controller, $controller_select %></td> </tr>
      <tr> <td><%= n += 1 %></td> <td>Блокировка страниц</td> <td align = "center"><%= f.select :access_full, $access_select %></td></tr>
      <tr> <td><%= n += 1 %></td> <td>Ко всем отделам</td> <td align = "center"><%= f.select :access_all_otdel, $access_select %></td></tr>
      <tr> <td><%= n += 1 %></td> <td>Access_format</td>    <td align = "center"><%= f.select :format, $format_select %></td></tr>
      <tr> <td><%= n += 1 %></td> <td>Таблица</td>     <td align = "center"><%= f.select :access_index, $access_select %></td></tr>
      <tr> <td><%= n += 1 %></td> <td>Просмотр</td>      <td align = "center"><%= f.select :access_show,  $access_select %></td></tr>
      <tr> <td><%= n += 1 %></td> <td>Изменение</td>      <td align = "center"><%= f.select :access_edit,  $access_select %></td></tr>
      <tr> <td><%= n += 1 %></td> <td>Новый</td>       <td align = "center"><%= f.select :access_new,   $access_select %></td></tr>
      <tr> <td><%= n += 1 %></td> <td>Удаление</td>    <td align = "center"><%= f.select :access_del,   $access_select %></td></tr>
      <tr> <td><%= n += 1 %></td> <td>Печатать</td>     <td align = "center"><%= f.select :access_print, $access_select %></td> </tr>
      <tr> <td><%= n += 1 %></td> <td>Эл.почта</td>     <td align = "center"><%= f.select :access_email, $access_select %></td> </tr>
      </tbody>
    </table>
  <button class="button"> <%= f.submit("Сохранить") %></button><br>
<% end %>