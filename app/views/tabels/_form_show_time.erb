<!-- render for show tabel -->

  <table border="1">
    <caption> <h3>Карта табеля <br>
      <%= @tabel.title %>   <%= @personal.forname %><br>
      <%= $monat_array[$jetzt_num_monat.to_i] %>  <%= $jetzt_yahre %></h3></caption>
    <tbody>
    <% num = 0 %>
    <tr><td><%=num += 1 %></td> <td>Должность</td> <td align="center">              <%= @tabel.kadr %></td></tr>
    <tr><td><%=num += 1 %></td> <td>Отдел</td> <td align = "center"><%= $otdel_long[@tabel.num_otdel.to_i] %></td></tr>
    <tr><td><%=num += 1 %></td> <td>В месяце рабочих дней</td><td align = "center"><%= @tabel.tag %></td> </tr>
    <tr><td><%=num += 1 %></td> <td>В месяце рабочих часов</td><td align = "center"><%= @tabel.hour %></td> </tr>
    <tr><td><%=num += 1 %></td> <td>Коэф. сверхурочных</td><td align ="center">    <%= @tabel.kfoberhour %></td></tr>
    <tr><td><%=num += 1 %></td> <td>Отработано (дней)</td><td align ="center">     <%= @tabel.tagemach %></td></tr>
    <tr><td><%=num += 1 %></td> <td>Отработано (часов)</td><td align ="center">    <%= @tabel.hourmach %></td></tr>
    <tr><td><%=num += 1 %></td> <td>Сверхурочные(часов)</td><td align ="center">   <%= @tabel.oberhour %></td> </tr>
    <tr><td><%=num += 1 %></td> <td>Командировки (дни)</td><td align ="center">    <%= @tabel.reisetage %></td> </tr>
    <tr><td><%=num += 1 %></td> <td>Отпуск (дни)</td><td align ="center">          <%= @tabel.urlaub %></td> </tr>
    <tr><td><%=num += 1 %></td> <td>Больничный (дни)</td><td align ="center">      <%= @tabel.krankentage %></td> </tr>
    </tbody>
  </table>
  <% if @access_edit >0 && @mond.block_timetabel == 0%>
  <strong>
  <li><%= link_to 'Изменить',edit_tabel_path(@tabel, format: $format_time) %></li>
  <% else %>
  <li>Карта табеля закрыта</li>
  </strong>
  <% end %>
  <br><button class="button"><%= link_to 'Выход', tabels_path(format: $format_time) %></button><br>
