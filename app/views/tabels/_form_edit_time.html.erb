<%= form_for(@tabel) do |f| %>
    <table border="1">
      <caption> <h3>Карта табеля <br>
        <%= @tabel.title %>   <%= @personal.forname %>
        <%= $monat_array[$jetzt_num_monat.to_i] %>  <%= $jetzt_yahre %></h3></caption>
      <tbody>
      <% n = 0 %>
      <tr class ='pasline'><td><%=n +=1 %></td><td>Должность</td><td align="center"><%= @tabel.kadr %></td> </tr>
      <tr class ='pasline'><td><%=n +=1 %></td><td>Отдел</td><td align="center"><%= $otdel_long[@tabel.num_otdel] %></td></tr>
      <tr class ='pasline'><td><%=n +=1 %></td><td>Рабочих дней</td><td align="center"><%= @tabel.tag %></td> </tr>
      <tr class ='pasline'><td><%=n +=1 %></td><td>Рабочих часов</td><td align="center"><%= @tabel.hour %></td> </tr>
      <tr class ='pasline'><td><%=n +=1 %></td><td>Коэффициент сверхурочных</td><td align="center"><%= @tabel.kfoberhour %></td> </tr>
      <tr><td><%= n += 1 %></td><td><%= f.label :tagemach, "Отработано дней" %></td>
          <td align="center"><%= f.number_field :tagemach,:min =>"0",:max =>"22",required:true,:class =>"input"%></td> </tr>
      <tr><td><%= n += 1 %></td><td><%= f.label :hourmach,"Отработано часов" %></td>
          <td align="center"><%= f.number_field :hourmach,:min =>"0",:max =>"176",required:true,:class =>"input"%></td> </tr>
      <tr><td><%= n += 1 %></td><td><%= f.label :oberhour,"Сверхурочных часов" %></td>
          <td align="center"><%= f.number_field :oberhour,:min =>"0",:max =>"64",:class =>"input"%></td> </tr>
      <tr><td><%= n += 1 %></td><td><%= f.label :reisetage, "Командировки (дни)" %></td>
          <td align="center"><%= f.number_field :reisetage, :min =>"0", :max =>"30", :class =>"input"%></td> </tr>
      <tr><td><%= n += 1 %></td><td><%= f.label :krankentage, "Больничный (дни)" %></td>
          <td align="center"><%= f.number_field :krankentage,:min =>"0",:max => "24",:class =>"input"%></td> </tr>
      <tr><td><%= n += 1 %></td><td><%= f.label :urlaub, "Отпуск (дни)" %></td>
          <td align="center"><%= f.number_field :urlaub, :min =>"0", :max =>"28", :class =>"input"%></td> </tr>
      </tbody>
    </table><br>
  <button class="button"><%= f.submit "Сохранить" %></button><br><br>
  <button class="button"><%= link_to "Выход без сохранения", tabels_path(format: $format_time) %></button>
  <% end %>