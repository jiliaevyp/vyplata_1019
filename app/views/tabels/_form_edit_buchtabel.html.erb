    <caption> <h3>Карта ведомости <br>
      <font color="red"><%= @personal.title %>   <%= @personal.forname %>   <%= @personal.fornametwo %></font><br>
      <%= $monat_array[$jetzt_num_monat.to_i] %>  <%= $jetzt_yahre %></h3></caption>
    <tbody>
    <% n = 0 %>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Должность</td>
      <td align="center"><%= @tabel.kadr %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Отдел</td>
      <td align="center"><%= $otdel_long[@tabel.num_otdel] %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Рабочих дней</td>
      <td align="center"><%= @tabel.tag %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Рабочих часов</td>
      <td align="center"><%= @tabel.hour %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Коэфф. сверхурочных</td>
      <td align="center"><%= @tabel.kfoberhour %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Отработано дней</td>
      <td align="center"><%= @tabel.tagemach %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Отработано часов</td>
      <td align="center"><%= @tabel.hourmach %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Сверхурочных часов</td>
      <td align="center"><%= @tabel.oberhour %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Тарифная ставка</td>
      <td align="center"><%= @tabel.tarifhour %></td></tr>
    <tr class ='pasline'><td><%= n +=1 %></td><td>Начислен оклад</td>
      <td align="right"><%= sprintf("%0.02f руб",@tabel.oklad) %></td></tr>
    <tr class ='pasline'><td><%= n += 1 %></td><td>Надбавка</td>
      <td align="right"><%= sprintf("%0.02f руб",@tabel.nadbavka )%></td> </tr>
    <tr class ='pasline'><td><%= n += 1 %></td><td>Премия</td>
      <td align="right"><%= sprintf("%0.02f руб",@tabel.bonus )%></td> </tr>
    <tr>                 <td><%=n += 1 %></td><td><%= f.label :urlaubgeld, "Отпускные"%></td>
      <td align="center"><%= f.number_field :urlaubgeld,:min=>"0",:class=>"input" %></td> </tr>
    <tr>                 <td><%=n += 1 %></td><td><%= f.label :krankengeld, "Больничный лист"%></td>
      <td align="center"><%= f.number_field :krankengeld,:min=>"0",:class=>"input" %></td> </tr>
    <tr>                 <td><%=n += 1 %></td><td><%= f.label :minus, "Вычтено"%></td>
      <td align="center"><%= f.number_field :minus,:min=>"0",:class=>"input" %></td> </tr>
    <tr>                 <td><%=n += 1 %></td><td><%= f.label :textminus, "Причина вычета"%></td>
      <td align="center"><%= f.text_field :textminus,:class=>"input" %></td> </tr>
    <tr>                 <td><%=n += 1 %></td><td><%= f.label :nalog, "Подоходный налог"%></td>
      <td align="center"><%= f.number_field :nalog,:min=>"0",:class=>"input" %></td> </tr>
