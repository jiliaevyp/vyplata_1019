<!-- render for Personal личные сведения -->
<table border="1">
  <caption>
    <h3>Список сотрудников<br>
      <%= $monat_array[$jetzt_num_monat.to_i] %>    <%= $jetzt_yahre %></h3>
      <%= @otdel %>      <%= $reestr_block_umblock[@mond.block_personal] %>
  </caption>
  <thead>
  <tr>
    <th>№</th>
    <th align="center"><%=  link_to 'Фамилия', personals_path(sort_by_name: "1")  %></th>
    <th align="center">Имя</th>
    <th align="center"><%=  link_to 'Должность', personals_path(sort_by_kadr: "1")  %></th>
    <th align="center"><%=  link_to 'Отдел', personals_path(sort_by_otdel: "1")  %></th>
    <th>Образование</th>
    <% if $glob_permition > 0 %>
      <th>Допуск</th><%end %>
  </tr>
  </thead>
  <tbody>
  <% num = 0 %>
  <% @personals.each do |t| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= num += 1 %></td>
        <% if $glob_permition > 0 || (@access_show > 0 && t.id != $real_admin.id) %>
          <td><%= link_to t.title, personal_path(t) %></td>
        <% else %>
          <td><%= t.title %></td>
        <%end %>
        <td><%= t.forname %></td>
        <td><%= t.kadr  %></td>
        <td align="left"><%= $otdel_long[t.num_otdel.to_i]  %></td>
          <td align="center" ><%= t.bilding  %></td>
          <% if $glob_permition > 0 %>
            <td><%= $administrator[t.personal_admin]  %></td>
          <%end %>
      </tr>
  <% end %>
  </tbody>
</table>
