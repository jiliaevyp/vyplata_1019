<!-- render for Mond block/umblock -->

  <%= form_tag(@controller_name, method: "get", class: "nifty_form") do %>
    <% if @mond.block_mond == 1 %>
      <submit><%= submit_tag("Открыть месяц",name:"block",value: @commit_open,
                             data: {confirm:'У вас есть доступ?',referral_code: "1234" })%></submit>
    <% else %>
      <submit><%= submit_tag("Закрыть месяц" , name:"block", value: @commit_close,
                             data: {confirm:'Вы хотите закрыть месяц?'})%></submit>
    <% end %>
  <% end %>